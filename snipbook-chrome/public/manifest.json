{
  "name": "Snipbook",
  "version": "1.0.0",
  "description": "",
  "manifest_version": 3,
  "author": "Mohammad Affan Khan",
  "permissions": [
        "activeTab",
        "sidePanel",
        "storage"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_popup": "extension.html"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ]
}